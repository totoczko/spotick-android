<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="490dp">

    <android.support.v7.widget.CardView
        android:id="@+id/android_card_view_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintLeft_toLeftOf="parent"
        android:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="4dp"
            android:paddingBottom="32dp">

            <ImageView
                android:id="@+id/cardview_image"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/boo" />

            <ImageView
                android:id="@+id/marker"
                android:layout_width="40dp"
                android:layout_height="56dp"
                android:layout_below="@+id/cardview_image"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_place_name" />

            <TextView
                android:id="@+id/cardview_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_image"
                android:layout_toRightOf="@+id/marker"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:text="Warszawa"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_below="@+id/cardview_image"
                android:layout_alignLeft="@+id/likes_counter"
                android:layout_marginLeft="-40dp"
                android:layout_marginTop="0dp"
                android:background="#fff"
                android:padding="16dp"
                app:srcCompat="@drawable/ic_favorite" />

            <TextView
                android:id="@+id/likes_counter"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_below="@+id/cardview_image"
                android:layout_alignEnd="@+id/cardview_image"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:padding="16dp"
                android:text="3"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/marker"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Free android tutorials and examples for beginners and expert." />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>